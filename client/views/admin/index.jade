extends layout

block content
	div.container-fluid
		div.row
			div#sidebar.col-xs-3
				div.list-group.links
					a.list-group-item.active(data="dashboard")
						h4.list-group-item-heading(href="#") Dashboard
						p Overview of system
					a.list-group-item(data="chat")
						h4.list-group-item-heading Chat
						p Create new chat rooms, edit and delete messages
					a.list-group-item(data="users")
						h4.list-group-item-heading Users
						p Add a Create new users, edit user details and delete users
			div#admin.col-xs-8
				include dashboard
				include chat
				include users